<%= form_with model: @user do |u| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 row">
    <div class="col-sm-2 col-from-label">
      <%= u.label :email %>
    </div>

    <div class="col-sm-10">
      <%= u.email_field :email, placeholder: "Email" %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-from-label">
      <%= u.label :name %>
    </div>

    <div class="col-sm-10">
      <%= u.text_field :name, placeholder: "Name" %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-from-label">
      <%= u.label :password %>
    </div>

    <div class="col-sm-10">
      <%= u.password_field :password, placeholder: "Password" %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-from-label">
      <%= u.label :password_confirmation %>
    </div>

    <div class="col-sm-10">
      <%= u.password_field :password_confirmation, placeholder: "Confirm Password" %>
    </div>
  </div>

  <%= u.submit "Register", class: "btn btn-primary btn-lg" %>
<% end %>
