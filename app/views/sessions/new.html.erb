<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <%= form_with url: session_path do |u| %>
    

    <div class="mb-3 row">
      <div class="col-sm-2 col-from-label">
        <%= u.label :email %>
      </div>

      <div class="col-sm-10">
        <%= u.email_field :email, placeholder: "Email" %>
      </div>
    </div>

    

    <div class="mb-3 row">
      <div class="col-sm-2 col-from-label">
        <%= u.label :password %>
      </div>

      <div class="col-sm-10">
        <%= u.password_field :password, placeholder: "Password" %>
      </div>
    </div>

  

    <%= u.submit "Log In", class: "btn btn-primary" %>
    <%= link_to "Sign Up", new_user_path, class: "btn btn-primary", style: "width: 100px;" %>
    <%= link_to "back",root_path ,class:"btn btn-primary" %>
  <% end %>

  
</div>
