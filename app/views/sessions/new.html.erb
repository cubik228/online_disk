<%= form_with url: session_path do |u| %>
  

  <div class="mb-3 row">
    <div class="col-sm-2 col-from-label">
      <%= u.label :email %>
    </div>

    <div class="col-sm-10">
      <%= u.email_field :email, placeholder: "Email" %>
    </div>
  </div>

  

  <div class="mb-3 row">
    <div class="col-sm-2 col-from-label">
      <%= u.label :password %>
    </div>

    <div class="col-sm-10">
      <%= u.password_field :password, placeholder: "Password" %>
    </div>
  </div>

 

  <%= u.submit "Log In", class: "btn btn-primary btn-lg" %>
<% end %>

<div class="mt-3"> <%= link_to "back",root_path ,class:"btn btn-primary" %></div>
