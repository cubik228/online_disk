<h1 class="mb-4">New file</h1>
<%= form_with model: @file, url: uploaded_files_path, local: true, multipart: true do |f|  %>
  <div class="margin-left: 20px" >
    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <%= f.label :name %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :name, required: true, minlength: 2, placeholder: "name", class: "form-control" %>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <%= f.label :attachment %>
      </div>
      <div class="col-sm-10">
        <%= f.file_field :attachment, required: true, class: "form-control" %>
      </div>
    </div>

    <%= f.submit "add file", class: "btn btn-primary" %>
  </div>
<% end %>


