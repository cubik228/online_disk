<h1>Search Results</h1>

<% @results.each do |result| %>
  <div>
    <% if result.attachment.present? %>
      <% if image_file?(result.attachment.url) %>
        <h3>Preview:</h3>
        <%= image_tag result.attachment.url, height: '300', width: '300' %>
      <% else %>
        <h3>File:</h3>
        <%= link_to result.attachment.url, target: '_blank' do %>
          <%= result.attachment.identifier %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  
  <%= button_to "Move to trash", uploaded_file_path(result), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>

  <% end %>

<div class="mt-3"> <%= link_to "back",uploaded_files_path ,class:"btn btn-primary" %></div>
 