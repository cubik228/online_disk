<style>

</style>
<h1 class="mt-4">Home</h1>

<div>
  <%= "#{number_to_human_size(@all_size)} / 15 GB" %>
</div>



          
  <%= form_tag(uploaded_files_path, method: "get", class: "mb-4 mt-2 ml-3") do %>
    <div class="input-group">

      <div style="width: 800px;">
        <%= text_field_tag(:query, params[:query], class: "form-control", placeholder: "Search by name...") %>
      </div>

      <%= submit_tag("Search", class: "btn btn-outline-secondary") %>
    </div>
  <% end %>


 



<ul class="top_f">
  <li class="info">Name</li>
  <li class="info">Date</li>
  <li class="info">Size</li>
  <li class="info">User</li>
  <li class="info"></li>
</ul>
<hr style="width: 80%; ">
<% @files.each do |file| %>
  <div class="files_prew" style="height: 20px;">
    <ul class="show_info" style="height: 100%;">
      <% if file.attachment.present? %>
        <li class="info">
          <%= link_to file.attachment.url, target: '_blank' do %>
            <%= truncate(file.attachment.identifier, length: 34) %>
          <% end %>
        </li>
        <li class="info"><%= file.created_at.strftime('%Y-%m-%d %H:%M:%S') if file.created_at.present? %></li>
        <li class="info"><%= number_to_human_size(file.attachment.file.size) %></li>
        <li class="info">
          <% if current_user != 0 %>
            <%= current_user.name %>
          <% end %>
        </li>
        <li class="info">
          <%= button_to "", uploaded_file_path(file) , class: "bi bi-trash", method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
      <% end %>
    </ul>
  </div>
  <hr style="width: 80%; ">
<% end %>

<div style="margin-left: 45%;">
  <%= paginate @files %>
</div>






