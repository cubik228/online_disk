<% @files.each_with_index do |file, index| %>
  <div>
    <h3>Name:</h3>  
    <%= file.name if file.name.present? %>
    <% if file.attachment.present? %>
      <% if image_file?(file.attachment.url) %>
        <h3>Preview:</h3>
        <%= image_tag file.attachment.url, height: '300', width: '300' %>
      <% else %>
        <p>File:</p>
        <%= link_to file.attachment.url, target: '_blank' do %>
          <%= file.attachment.identifier %>
        <% end %>
    <% end %>
    <div>
      <% size_in_bytes = @size_in_bytes[index] %>
        <% if size_in_bytes >= 1.kilobyte %>
          <%= "Size: #{(size_in_bytes.to_f / 1.kilobyte).round(2)} МБ" %>
        <% else %>
          <%= "Size: #{size_in_bytes} КБ" %>
        <% end %>
      <% end %>
      <div><%= file.created_at.strftime('%Y-%m-%d %H:%M:%S') if file.created_at.present? %></div>
    </div>
  </div>
  <p class="mt-4">
    <%= link_to "Show", uploaded_file_path(file), class: "btn btn-secondary" %>
    <%= button_to "Delete", uploaded_file_path(file), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    <div class="mt-3"> <%= link_to "back", root_path, class:"btn btn-primary" %></div>
  </p>
<% end %>
